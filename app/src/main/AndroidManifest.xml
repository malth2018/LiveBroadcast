<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.livebroadcast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_15"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MenuDownloadActivity"
            android:label="@string/title_activity_menu_download" >
        </activity>
        <activity
            android:name=".MenuAccountActivity"
            android:label="@string/title_activity_menu_account"
            android:launchMode="singleInstance">

        </activity>
        <activity
            android:name=".MenuFocusActivity"
            android:label="@string/title_activity_menu_focus" >
        </activity>
        <activity
            android:name=".MenuFavoriteActivity"
            android:label="@string/title_activity_menu_favorite" >
        </activity>
        <activity
            android:name=".MenuHistoryActivity"
            android:label="@string/title_activity_menu_history" >
        </activity>
        <activity
            android:name=".MenuPromptActivity"
            android:label="@string/title_activity_menu_prompt" >
        </activity>
        <activity
            android:name=".MenuFeedbackActivity"
            android:label="@string/title_activity_menu_feedback" >
        </activity>
        <activity
            android:name=".MenuPluginActivity"
            android:label="@string/title_activity_menu_plugin" >
        </activity>
        <activity
            android:name=".MenuSettingActivity"
            android:label="@string/title_activity_menu_setting" >
        </activity>
    </application>

</manifest>
