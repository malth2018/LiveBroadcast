<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.livebroadcast"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_15"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.livebroadcast.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuDownloadActivity"
            android:label="@string/title_activity_menu_download" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuAccountActivity"
            android:label="@string/title_activity_menu_account"
            android:launchMode="singleInstance" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuFocusActivity"
            android:label="@string/title_activity_menu_focus" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuFavoriteActivity"
            android:label="@string/title_activity_menu_favorite" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuHistoryActivity"
            android:label="@string/title_activity_menu_history" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuPromptActivity"
            android:label="@string/title_activity_menu_prompt" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuFeedbackActivity"
            android:label="@string/title_activity_menu_feedback" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuPluginActivity"
            android:label="@string/title_activity_menu_plugin" >
        </activity>
        <activity
            android:name="com.example.livebroadcast.MenuSettingActivity"
            android:label="@string/title_activity_menu_setting" >
        </activity>
    </application>

</manifest>